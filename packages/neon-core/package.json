{
  "name": "@cityofzion/neon-core",
  "description": "Neon-JS Core functionality",
  "version": "4.3.2",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CityOfZion/neon-js.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "neo",
    "antshares",
    "javascript",
    "libraries"
  ],
  "author": "Yak Jun Xiang <snowypowers@gmail.com> (https://github.com/snowypowers)",
  "license": "MIT",
  "main": "dist/index.js",
  "browser": "dist/browser.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc -b",
    "clean": "rimraf ./lib ./dist",
    "dist": "cross-env NODE_ENV=development webpack --mode development",
    "dist:prod": "cross-env NODE_ENV=production webpack --mode production",
    "prepublishOnly": "yarn clean && yarn build && yarn dist:prod",
    "lint": "tslint src/**/*.ts __tests__/**/*.ts __integration__/**/*.ts",
    "pretty": "prettier --write --loglevel=warn \"./{src,__{tests,integration}__}/**/*.ts\"",
    "start": "jest --watch",
    "test": "jest",
    "test:integration": "jest /packages/.*/__integration__/.*",
    "test:unit": "jest /packages/.*/__tests__/.*"
  },
  "dependencies": {
    "@types/bn.js": "4.11.3",
    "@types/bs58": "4.0.0",
    "@types/crypto-js": "3.1.43",
    "@types/elliptic": "6.4.1",
    "@types/loglevel": "1.5.3",
    "@types/node": "10.12.18",
    "axios": "0.18.0",
    "bignumber.js": "7.2.1",
    "bn.js": "4.11.8",
    "bs58": "4.0.1",
    "bs58check": "2.1.2",
    "crypto-js": "3.1.9-1",
    "elliptic": "6.5.4",
    "loglevel": "1.6.1",
    "loglevel-plugin-prefix": "0.8.4",
    "scrypt-js": "2.0.4",
    "secure-random": "1.1.1",
    "wif": "2.0.6"
  },
  "devDependencies": {
    "clean-webpack-plugin": "1.0.0",
    "ts-loader": "5.3.1",
    "webpack": "4.27.1",
    "webpack-cli": "3.1.2"
  },
  "files": [
    "dist/",
    "lib/",
    "typings/"
  ]
}
